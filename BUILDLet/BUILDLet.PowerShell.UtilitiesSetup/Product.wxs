<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

  <!-- Include -->
  <?include ..\Version\InstallerInfo.wxi?>
  <?include ..\Version\InstallerGUID.wxi?>

  <!-- Product Information -->
  <?define ProductName="$(var.PSUtility_ProductName)"?>
  <?define ProductComment="$(var.PSUtility_ProductComment)"?>
  <?define PSModuleName="$(var.PSUtility_PSModuleName)"?>

  <!-- GUID -->
  <?define GUID_Product="$(var.GUID_PSUtility_Product)"?>
  <?define GUID_UpgradeCode="$(var.GUID_PSUtility_UpgradeCode)"?>
  <?define GUID_ProductComponent="$(var.GUID_PSUtility_ProductComponent)"?>


  <!-- Source Files -->
  <?define Source_ProductComponent_PSD1="..\Release\BUILDLet.PowerShell.Utilities\BUILDLet.PowerShell.Utilities.psd1"?>
  <?define Source_ProductComponent_PSM1="..\Release\BUILDLet.PowerShell.Utilities\BUILDLet.PowerShell.Utilities.psm1"?>
  <?define Source_ProductComponent_DLL="..\Release\BUILDLet.PowerShell.Utilities\BUILDLet.PowerShell.Utilities.dll"?>


  <!-- Product -->
  <Product Id="$(var.GUID_Product)"
           UpgradeCode="$(var.GUID_UpgradeCode)"
           Manufacturer="$(var.Manufacturer)"
           Name="$(var.ProductName) (x86) $(var.Version)"
           Version="$(var.Version)"
           Language="1041" Codepage="932">
    
		<Package Id="*"
             Platform="x86"
             Description="$(var.ProductName) (x86) $(var.Version) Installer"
             Comments="$(var.ProductComment) (x86)"
             Manufacturer="$(var.Manufacturer)"
             InstallerVersion="200"
             Compressed="yes" 
             Languages="1041" SummaryCodepage="932"
             InstallScope="perMachine" />

    
    <!-- Install Condition -->
    <!-- (This program is available for both x86 and x64.) -->
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

    
    <!-- Media -->
    <MediaTemplate CabinetTemplate="data{0}.cab" EmbedCab="yes" />
    
    
    <!-- Feature -->
		<Feature Id="ProductFeature" Title="$(var.ProductName) (x86)" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
		</Feature>

  </Product>


  
  <!-- Directories -->
  <Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">

      <!-- PSModulePath (x86) -->
      <Directory Id="ProgramFilesFolder">
        <Directory Id="WindowsPowerShellFolder" Name="WindowsPowerShell">
          <Directory Id="PSModuleFolder" Name="Modules">
            <Directory Id="INSTALLFOLDER" Name="$(var.PSModuleName)" />
          </Directory>
        </Directory>
      </Directory>

    </Directory>
  </Fragment>
  
  

  <!-- Components -->
  <Fragment>

    <!-- Program Files (x86) -->
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component Id="ProductComponent" Guid="$(var.GUID_ProductComponent)">
        <File Source="$(var.Source_ProductComponent_PSD1)" />
        <File Source="$(var.Source_ProductComponent_PSM1)" />
        <File Source="$(var.Source_ProductComponent_DLL)" />
        
        <!-- Registry registration is removed. -->
        <!--
        <RegistryValue Root="HKLM" Key='SOFTWARE\[Manufacturer]\[ProductName]' Name='installed' Type='integer' Value='1' KeyPath='yes' />
        -->
      </Component>
    </ComponentGroup>

  </Fragment>
</Wix>